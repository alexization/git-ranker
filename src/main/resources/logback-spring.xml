<?xml version="1.0" encoding="utf-8" ?>
<configuration>

    <logger name="org.springframework.batch" level="WARN"/>
    <logger name="org.springframework.jdbc" level="WARN"/>

    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql" level="WARN"/>

    <appender name="LOCAL_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{20}) - %msg %green(%replace(%mdc){'(.+)', '[$1]'}) %n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="PROD_JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">

            <includeMdcKeyName>log_category</includeMdcKeyName>
            <includeMdcKeyName>event_type</includeMdcKeyName>

            <includeMdcKeyName>trace_id</includeMdcKeyName>
            <includeMdcKeyName>client_ip</includeMdcKeyName>
            <includeMdcKeyName>http_method</includeMdcKeyName>
            <includeMdcKeyName>request_uri</includeMdcKeyName>
            <includeMdcKeyName>http_status</includeMdcKeyName>
            <includeMdcKeyName>latency_ms</includeMdcKeyName>

            <includeMdcKeyName>username</includeMdcKeyName>
            <includeMdcKeyName>node_id</includeMdcKeyName>

            <includeMdcKeyName>job_name</includeMdcKeyName>
            <includeMdcKeyName>step_name</includeMdcKeyName>

            <includeMdcKeyName>db_query_time_ms</includeMdcKeyName>
            <includeMdcKeyName>github_api_call_time_ms</includeMdcKeyName>
            <includeMdcKeyName>github_api_cost</includeMdcKeyName>
            <includeMdcKeyName>github_api_remaining</includeMdcKeyName>
            <includeMdcKeyName>github_api_reset_at</includeMdcKeyName>

            <includeMdcKeyName>error_code</includeMdcKeyName>
            <includeMdcKeyName>error_message</includeMdcKeyName>

            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</timestampPattern>

            <includeContext>true</includeContext>

            <includeCallerData>false</includeCallerData>

            <stackTraceHashStrategy>LEGACY</stackTraceHashStrategy>

            <fieldNames>
                <version>[ignore]</version>
                <logger>[ignore]</logger>
                <thread>[ignore]</thread>
                <levelValue>[ignore]</levelValue>
            </fieldNames>

            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <maxLength>2048</maxLength>
                <shortenedClassNameLength>20</shortenedClassNameLength>
                <rootCauseFirst>true</rootCauseFirst>
                <inlineHash>true</inlineHash>
            </throwableConverter>

        </encoder>
    </appender>

    <springProfile name="!prod">
        <root level="INFO">
            <appender-ref ref="LOCAL_CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="PROD_JSON_CONSOLE"/>
        </root>
    </springProfile>

</configuration>