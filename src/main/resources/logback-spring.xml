<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <appender name="LOCAL_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg %green(%replace(%mdc){'(.+)', '--> [$1]'}) %n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="PROD_JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>trace_id</includeMdcKeyName>
            <includeMdcKeyName>username</includeMdcKeyName>
            <includeMdcKeyName>node_id</includeMdcKeyName>
            <includeMdcKeyName>client_ip</includeMdcKeyName>
            <includeMdcKeyName>method</includeMdcKeyName>
            <includeMdcKeyName>uri</includeMdcKeyName>
            <includeMdcKeyName>http_status</includeMdcKeyName>
            <includeMdcKeyName>latency_ms</includeMdcKeyName>
            <includeMdcKeyName>db_query_time_ms</includeMdcKeyName>
            <includeMdcKeyName>github_api_call_time_ms</includeMdcKeyName>
            <includeMdcKeyName>job_name</includeMdcKeyName>
            <includeMdcKeyName>step_name</includeMdcKeyName>
            <includeMdcKeyName>chunk_number</includeMdcKeyName>
            <includeMdcKeyName>error_code</includeMdcKeyName>
            <includeMdcKeyName>error_message</includeMdcKeyName>
            <includeMdcKeyName>error_hash</includeMdcKeyName>

            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSS</timestampPattern>

            <includeContext>true</includeContext>
            <includeCallerData>false</includeCallerData>
            <stackTraceHashStrategy>LEGACY</stackTraceHashStrategy>
        </encoder>
    </appender>

    <springProfile name="!prod">
        <root level="INFO">
            <appender-ref ref="LOCAL_CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="PROD_JSON_CONSOLE"/>
        </root>
    </springProfile>

</configuration>